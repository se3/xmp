       <item>
            <title>Search by keyword</title>
		<mediaDisplay  name="photoView"
		width="200"
		rowCount="3"
		columnCount="7"
		menuBorderColor="20:20:20"
		sideColorTop="20:20:20"
		sideColorBottom="20:20:20"
		/>

            <link>picasa://</link>
            <media:thumbnail url="image/LIVE_PICASA_ICON.jpg" width="100" height="90" />
            <submenu name="Keyword Search" description="Search all the Photos using keyword" width="200">
                <url>http://picasaweb.google.com/data/feed/api/all?q=%s&amp;max-results=48&amp;thumbsize=160</url>
                <nextPageItemCount>48</nextPageItemCount>
                <input name="keyword">keyword</input>
            </submenu>
            <submenu name="Xtreamer Search" description="Search all the Photos using keyword">
                <url>http://picasaweb.google.com/data/feed/api/all?q=mvix&amp;max-results=48&amp;thumbsize=160</url>
                <nextPageItemCount>48</nextPageItemCount>
            </submenu>
       </item>
       <item>
            <title>Search by ID</title>
            <mediaDisplay  name="photoView"
	    capYPC="20"
	    rowCount="3"
	    columnCount="7"
	    menuBorderColor="20:20:20"
	    sideColorTop="20:20:20"
	    sideColorBottom="20:20:20"
	    />

            <link>picasa://</link>
	    <media:thumbnail url="image/LIVE_PICASA_ICON.jpg" width="100" height="90" />
            <submenu name="Picasa User ID" description="Login in Picasa using User Name">
                <url>http://picasaweb.google.com/data/feed/api/user/%s?kind=album</url>
