    <script>
    function handleSymbols()
    {
       for (i=0; i &lt; getItemSize(); i++) {
         symbolArray[i] = getItemInfo(i, "symbol");
       }
       symbols = symbolArray.join("+");
       url = "http://download.finance.yahoo.com/d/quotes.csv?s=";
       url = url + symbols + "&amp;f=l1";
    }
    setRefreshTime(1000);
    priceArrayString = null;
    var symbolArray = new Array();
    var priceArray = new Array();
    handleSymbols();
    </script>

    <onRefresh>
      setRefreshTime(10000);
      print("onRefresh");
      priceArrayString = getURL(url);
      for (i=0; i &lt; getItemSize(); i++) {
        priceArray[i] = getStringArrayAt(priceArrayString, i);
      }
    </onRefresh>

    <submenu name="Add Stock">
        <onClick>
            <script>
              keyword= getInput();
              if (keyword!=null) {
                print("The search Keyword is ", keyword);
                addItem("newItem");
                handleSymbols();
                redrawDisplay();
                setRefreshTime(100);
              }
            </script>
        </onClick>
    </submenu>

    <newItem>
        <symbol>
            <script>keyword;</script>
        </symbol>
        <stockName>
            <script>keyword;</script>
        </stockName>
        <news>
            <url>
                <script>"http://finance.yahoo.com/rss/headline?s=" + keyword;</script>
            </url>
        </news>
    </newItem>
    <submenu name="Get Quotes">
        <onClick>
            <script>
              keyword= getInput();
              if (keyword!=null){
                print("The search Keyword is ", keyword);
                localUrl = "http://finance.yahoo.com/d/quotes.csv?s=";
                localUrl = localUrl + keyword + "&amp;f=nl1c6p2vt1d1ohgps1j1kja2redyb";
              }
            </script>
        </onClick>
        <symbol>
            <script>keyword</script>
        </symbol>
        <stockName>
            <script>keyword</script>
        </stockName>
        <news>
            <url>
                <script>"http://finance.yahoo.com/rss/headline?s=" + keyword;</script>
            </url>
        </news>
    </submenu>
